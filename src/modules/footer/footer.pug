- var catalog = ["Дымоходы","Дымососы","Печи для дома","Печи для бани"]
- var catalogRight = ["Камины", "Силикат кальция", "Котлы", "Ещё"]
- var information = ["Каталог","Установка и монтаж", "Отзывы", "Ликвидация товара"] 
- var informationRight = ["Полезное", "Контакты", "Оплата и доставка"] 

footer.footer
    div.container
        div.footer__block
            h2.footer__title КАТАЛОГ
            ul.footer__list
                div.footer__parts
                    each item in catalog
                        li.footer__item= item
                div.footer__parts
                    each item in catalogRight
                        li.footer__item= item

        div.footer__block
            h2.footer__title ИНФОРМАЦИЯ
            ul.footer__list
                div.footer__parts
                    each item in information
                        li.footer__item= item
                div.footer__parts
                    each item in informationRight
                        li.footer__item= item

        div.footer__block
            h2.footer__title ВРЕМЯ РАБОТЫ
            div.footer__work
                include ../../svg/wall-clock.svg
                time.footer__time 
                    span.footer__days пн-пт 
                    span 9:00 – 20:00 
                    span.footer__days сб-вс 
                    span 10:00 – 18:00
            div.footer__work
                include ../../svg/placeholder.svg
                address.footer__address г. Санкт - Петербург ,ул. Тамбасова д.7
            div.footer__net 
                a(href="https://vk.com/").footer__network
                    include ../../svg/vk.svg
                a(href="https://web.telegram.org/").footer__network 
                    include ../../svg/telegram.svg
                a(href="https://www.instagram.com/").footer__network 
                    include ../../svg/instagram.svg
                a(href="https://web.whatsapp.com/").footer__network 
                    include ../../svg/whatsapp.svg